generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  password      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  employees     Employee[]
  shifts        Shift[]
  monthlyHours  Int?
  roleSettings  Json?
  TimefoldShift TimefoldShift[]
}

model Employee {
  id             Int                    @id @default(autoincrement())
  name           String
  roles          String[]
  rate           Float                  @default(1.0)
  gender         String                 @default("Unknown")
  userId         Int
  user           User                   @relation(fields: [userId], references: [id])
  availability   EmployeeAvailability[]
  timefoldShifts TimefoldShift[]
}

model EmployeeAvailability {
  id         Int      @id @default(autoincrement())
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])
  startDate  DateTime
  finishDate DateTime
  status     String // 'unavailable', 'unreachable', 'preferable'
  isFullDay  Boolean  @default(false)

  @@unique([employeeId, startDate])
}

model Shift {
  id              Int      @id @default(autoincrement())
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  startTime       String
  endTime         String
  days            String[]
  roles           String[]
  isFullDay       Boolean  @default(false)
  hourToSplitAt   String?
  numberToSplitAt String?
}


model TimefoldShift {
  id         Int      @id @default(autoincrement())
  userId     Int
  employeeId Int
  user       User     @relation(fields: [userId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])
  isFullDay  Boolean
  start      DateTime
  end        DateTime
  month      Int
  role       String?
}
