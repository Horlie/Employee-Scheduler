generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  employees Employee[]
  shifts    Shift[]
  schedules Schedule[]
  monthlyHours Int?
  roleSettings Json?
}

model Employee {
  id    Int     @id @default(autoincrement()) @unique
  name  String
  role  String
  rate  Float   @default(1.0)
  userId Int
  user  User    @relation(fields: [userId], references: [id])
  availability EmployeeAvailability[]
  gender String @default("Unknown")
}

model EmployeeAvailability {
  id         Int      @id @default(autoincrement())
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])
  startDate  DateTime
  finishDate DateTime
  status     String   // Can be 'unavailable', 'unreachable', or 'preferable'
  isFullDay  Boolean  @default(false)
  @@unique([employeeId, startDate])
}

model Shift {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  startTime String
  endTime   String
  days      String[]
  role      String[]
  isFullDay Boolean  @default(false)
  hourToSplitAt String?
  numberToSplitAt String?
  
}

model Schedule {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  month Int
  data Json

  @@unique([userId, month], name: "userId_month") // Defines a composite unique constraint on userId and month
}